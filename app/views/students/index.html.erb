<div class="container">
  <h3>All Students</h3>

<table class="table table-striped">
  <thead class="table-secondary">
    <tr>
      <th>First Name</th>
      <th>Second Name</th>
      <th>Last Name</th>
      <th>ADM No</th>
      <th>Dorm</th>
      <th>Is Session?</th>
      <th>stream</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.student_fname %></td>
        <td><%= student.student_sname %></td>
        <td><%= student.student_lname %></td>
        <td><%= student.admission_no %></td>
        <td><%= student.dorm&.dorm_name %></td>
        <td><%= student.is_active ? 'Yes' : 'No' %></td>
        <td><%= student.stream&.stream_name %></td>
        
        <td>
          <%= link_to 'Show', student_path(student), class: 'btn btn-outline-primary btn-sm' %>
          <%= link_to 'Edit', edit_student_path(student), class: 'btn btn-outline-warning btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Student', new_student_path, class: 'btn btn-success mb-3' %>
</div>