<div class="container">
<h3>All teachers</h3>
<div id="teachers" class="table-responsive">
  <table class="table table-light table-bordered table-hover shadow-sm rounded-3">
    <thead class="table-secondary">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Mobile No</th>
        <th>Dept</th>
        <th>Subject</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.teacher_fname %></td>
          <td><%= teacher.teacher_lname %></td>
          <td><%= teacher.email %></td>
          <td><%= teacher.mobile_no %></td>
          <td><%= teacher.dept_id %></td>
          <td><%= teacher.subject_id %></td>
          <td>
              <%= link_to "Show", teacher, class: "btn btn-outline-primary btn-sm fw-semibold shadow-sm" %>
              <%= link_to "Edit", edit_teacher_path(teacher), class: "btn btn-outline-warning btn-sm fw-semibold shadow-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Teacher', new_teacher_path, class: "btn btn-success"  %>
</div>
