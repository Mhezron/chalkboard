<div class="container" >
    <h1>New Teacher</h1>

<%= form_with model: @teacher, local: true do |form| %>
<div>
    <%= form.label :First_name %>
    <%= form.text_field :teacher_fname, class: "form-control"%>
</div>

<div>
    <%= form.label :Last_name %>
    <%= form.text_field :teacher_lname, class: "form-control"%>
</div>

<div>
    <%= form.label :mobile_no %>
    <%= form.number_field :mobile_no, class: "form-control"%>
</div>

<div>
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control"%>
</div>

<div style="margin-top: 20px;"">
    <%= form.submit "Add Teacher", class: "btn btn-primary"%>
</div>

<% end %>
</div>